<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:elevation="@dimen/elevation">

        <ImageButton
            android:id="@+id/imgBackList"
            android:layout_width="@dimen/icon_h_w"
            android:layout_height="@dimen/icon_h_w"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/marginStartContext"
            android:layout_marginTop="@dimen/marginTop"
            android:background="@drawable/ic_back" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/viewBottom"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/imgPicture"
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="-3dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/turned" />

            <TextView
                android:id="@+id/textCooBooking"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_below="@id/imgPicture"
                android:layout_marginLeft="@dimen/marginStartContext"
                android:layout_marginTop="@dimen/marginDetailCoo2"
                android:text="@string/coo_name"
                android:textAppearance="@style/coo_yen_hoa" />

            <TextView
                android:id="@+id/addressBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textCooBooking"
                android:layout_alignStart="@id/textCooBooking"
                android:layout_marginTop="@dimen/marginDetailCoo"
                android:layout_marginRight="@dimen/marginStartContext"
                android:text="@string/coo_address"
                android:textAppearance="@style/simply_dumm" />

            <TextView
                android:id="@+id/kmBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addressBooking"
                android:layout_alignStart="@id/textCooBooking"
                android:layout_marginTop="@dimen/marginDetailCoo"
                android:text="@string/km"
                android:textAppearance="@style/simply_dumm" />

            <ImageView
                android:id="@+id/line9_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/kmBooking"
                android:layout_marginTop="@dimen/marginDetailCoo2"
                android:background="@drawable/line" />

            <TextView
                android:id="@+id/aboutSpace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line9_1"
                android:layout_alignStart="@id/textCooBooking"
                android:layout_marginTop="@dimen/marginDetailCoo2"
                android:text="@string/about_space"
                android:textAppearance="@style/about_space" />

            <TextView
                android:id="@+id/simply_dummy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/aboutSpace"
                android:layout_alignStart="@id/aboutSpace"
                android:layout_marginTop="@dimen/marginDetailCoo"
                android:layout_marginRight="@dimen/marginStartContext"
                android:text="@string/simply_dummy"
                android:textAppearance="@style/simply_dumm" />

            <ImageView
                android:id="@+id/line9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/simply_dummy"
                android:layout_marginTop="@dimen/marginDetailCoo2"
                android:background="@drawable/line" />

            <TextView
                android:id="@+id/ourOfService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line9"
                android:layout_alignStart="@id/aboutSpace"
                android:layout_marginTop="@dimen/marginDetailCoo2"
                android:text="@string/out_of_service"
                android:textAppearance="@style/about_space" />

            <TextView
                android:id="@+id/view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ourOfService"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/marginStartContext"
                android:text="@string/view_more"
                android:textAppearance="@style/view_more" />

            <ImageButton
                android:id="@+id/iconWifi"
                android:layout_width="@dimen/icon_h_w"
                android:layout_height="@dimen/icon_h_w"
                android:layout_below="@id/ourOfService"
                android:layout_alignLeft="@id/aboutSpace"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_wifi" />

            <ImageButton
                android:id="@+id/iconDrink"
                android:layout_width="@dimen/icon_h_w"
                android:layout_height="@dimen/icon_h_w"
                android:layout_below="@id/iconWifi"
                android:layout_alignLeft="@id/iconWifi"
                android:layout_marginTop="@dimen/marginDetailCoo"
                android:background="@drawable/ic_drink" />

            <TextView
                android:id="@+id/txtDetailWifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iconWifi"
                android:layout_marginStart="@dimen/icon"
                android:layout_toRightOf="@id/iconWifi"
                android:text="@string/detail_wifi"
                android:textAppearance="@style/detail_icon" />

            <TextView
                android:id="@+id/txtDetailDrink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iconDrink"
                android:layout_marginStart="@dimen/icon"
                android:layout_toRightOf="@id/iconDrink"
                android:text="@string/detail_drink"
                android:textAppearance="@style/detail_icon" />

            <ImageButton
                android:id="@+id/iconConver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iconWifi"
                android:layout_marginStart="@dimen/marginIcon2"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/txtDetailWifi"
                android:background="@drawable/ic_conversion_call" />

            <ImageButton
                android:id="@+id/iconAirCond"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/iconConver"
                android:layout_alignLeft="@id/iconConver"
                android:layout_alignTop="@id/iconDrink"
                android:background="@drawable/ic_air_conditioning" />

            <TextView
                android:id="@+id/txtDetailConver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iconWifi"
                android:layout_marginStart="@dimen/icon"
                android:layout_toRightOf="@id/iconConver"
                android:text="@string/detail_conversion"
                android:textAppearance="@style/detail_icon" />

            <TextView
                android:id="@+id/txtDetailAir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iconDrink"
                android:layout_marginStart="@dimen/icon"
                android:layout_toRightOf="@id/iconAirCond"
                android:text="@string/detail_air"
                android:textAppearance="@style/detail_icon" />

            <ImageButton
                android:id="@+id/iconPrinter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iconWifi"
                android:layout_marginTop="6dp"
                android:layout_marginRight="@dimen/marginIcon"
                android:layout_toLeftOf="@id/txtDetailPrinter"
                android:background="@drawable/ic_printer" />

            <TextView
                android:id="@+id/txtDetailPrinter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iconWifi"
                android:layout_alignRight="@id/view_more"
                android:text="@string/detail_printer"
                android:textAppearance="@style/detail_icon" />

            <ImageView
                android:id="@+id/line10"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/iconDrink"
                android:layout_marginTop="@dimen/marginDetailCoo2"
                android:background="@drawable/line" />

            <TextView
                android:id="@+id/styleRoom"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_below="@id/line10"
                android:layout_alignStart="@id/aboutSpace"
                android:layout_marginTop="@dimen/marginDetailCoo2"
                android:text="@string/style_room"
                android:textAppearance="@style/about_space" />


            <GridView
                android:id="@+id/listStyleRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/styleRoom"
                android:layout_alignLeft="@id/aboutSpace"
                android:layout_alignRight="@id/view_more"
                android:layout_marginTop="@dimen/marginDetailCoo" />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/viewBottom"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/view_bottom"
        android:elevation="@dimen/elevation">

        <Button
            android:id="@+id/btnSeeDates"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/marginStartContext"
            android:layout_marginTop="@dimen/marginDetailCoo"
            android:layout_marginRight="@dimen/marginStartContext"
            android:background="@drawable/button_normal"
            android:gravity="center"
            android:text="@string/see_dates"
            android:textAppearance="@style/textNormal"
            android:textColor="@color/colorWhile" />
    </RelativeLayout>
</RelativeLayout>
